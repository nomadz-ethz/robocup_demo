<!-- 摄像头跟踪球 -->

<root BTCPP_format="4" >
  <BehaviorTree ID="CamFindAndTrackBall">
     <Sequence name="root">
         <IfThenElse>
             <ScriptCondition        name="知道球的位置吗?" code="ball_location_known || tm_ball_pos_reliable" />
             <Sequence               name="[Yes] -> 追踪球并调整位置" >
                <CamTrackBall />
             </Sequence>
             <Sequence               name="[No] -> 寻找之">
                <CamFindBall />
             </Sequence>
         </IfThenElse>
     </Sequence>
  </BehaviorTree>
</root>
